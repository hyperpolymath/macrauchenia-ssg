{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "macrauchenia-ssg",
  "version": "0.2.0",
  "license": "AGPL-3.0-or-later",

  "tasks": {
    "build": "deno check adapters/*.js",
    "test": "deno test --allow-read --allow-run tests/",
    "test:coverage": "deno test --allow-read --allow-run --coverage=coverage tests/ && deno coverage coverage --lcov > coverage/lcov.info",
    "test:e2e": "deno test --allow-all tests/e2e/",
    "test:security": "deno test --allow-read tests/security/",
    "lint": "deno lint adapters/",
    "fmt": "deno fmt adapters/",
    "fmt:check": "deno fmt --check adapters/",
    "check": "deno lint adapters/ && deno fmt --check adapters/",
    "dev": "deno run --watch --allow-all mcp-server.ts",
    "serve": "deno run --allow-all mcp-server.ts",
    "docs": "deno doc --html --output=docs/api adapters/*.js",
    "ci": "deno task fmt:check && deno task lint && deno task test && deno task build"
  },

  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing": "jsr:@std/testing@1",
    "@std/path": "jsr:@std/path@1",
    "@std/fs": "jsr:@std/fs@1"
  },

  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },

  "lint": {
    "include": ["adapters/", "tests/", "mcp-server.ts"],
    "exclude": ["node_modules/", "coverage/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["no-eval", "no-explicit-any"],
      "exclude": []
    }
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["adapters/", "tests/"],
    "exclude": ["node_modules/", "coverage/", "docs/"]
  },

  "test": {
    "include": ["tests/"],
    "exclude": ["tests/fixtures/"]
  },

  "nodeModulesDir": "auto",
  "lock": true
}
