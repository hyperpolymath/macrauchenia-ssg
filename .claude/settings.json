{
  "$schema": "https://claude.ai/schemas/settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "tool": "Bash",
        "command": "echo 'Executing command...'"
      }
    ],
    "PostToolUse": [
      {
        "tool": "Write",
        "command": "test -f $FILE && head -1 $FILE | grep -q SPDX || echo 'Warning: Missing SPDX header'"
      }
    ],
    "SessionStart": [
      {
        "command": "which deno && deno --version || echo 'Deno not installed'",
        "description": "Verify Deno installation"
      },
      {
        "command": "which just && just --version || echo 'just not installed'",
        "description": "Verify just installation"
      }
    ]
  },
  "permissions": {
    "allow-read": ["adapters/", "tests/", ".github/"],
    "allow-write": ["adapters/", "tests/", "docs/"],
    "allow-run": ["deno", "just", "git"]
  },
  "security": {
    "requireSPDX": true,
    "blockEval": true,
    "requireInputValidation": true
  }
}
